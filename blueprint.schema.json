{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://websitepipeline.dev/blueprint.schema.json",
  "title": "Site Blueprint",
  "description": "Machine-readable site definition for the automation-first website pipeline",
  "type": "object",
  "required": ["site", "sitemap", "contentModel", "designTokens", "sections", "integrations"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "site": {
      "type": "object",
      "required": ["name", "domain", "tagline", "description", "locale", "timezone"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "domain": { "type": "string", "minLength": 1 },
        "tagline": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "locale": { "type": "string", "pattern": "^[a-z]{2}_[A-Z]{2}$" },
        "timezone": { "type": "string", "minLength": 1 }
      }
    },
    "sitemap": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["route", "title", "template", "sections"],
        "additionalProperties": false,
        "properties": {
          "route": { "type": "string", "pattern": "^/" },
          "title": { "type": "string", "minLength": 1 },
          "template": { "type": "string", "enum": ["home", "page", "menu", "about"] },
          "sections": {
            "type": "array",
            "items": { "type": "string" }
          },
          "seo": {
            "type": "object",
            "properties": {
              "titleOverride": { "type": "string" },
              "description": { "type": "string" },
              "schema": { "type": "string" }
            }
          }
        }
      }
    },
    "contentModel": {
      "type": "object",
      "required": ["postTypes", "taxonomies"],
      "additionalProperties": false,
      "properties": {
        "postTypes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["slug", "label", "fields"],
            "additionalProperties": false,
            "properties": {
              "slug": { "type": "string", "pattern": "^[a-z_]+$" },
              "label": { "type": "string" },
              "plural": { "type": "string" },
              "fields": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["key", "label", "type"],
                  "additionalProperties": false,
                  "properties": {
                    "key": { "type": "string", "pattern": "^[a-z_]+$" },
                    "label": { "type": "string" },
                    "type": { "type": "string", "enum": ["text", "textarea", "number", "image", "boolean", "taxonomy", "url"] },
                    "required": { "type": "boolean" }
                  }
                }
              },
              "taxonomies": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "taxonomies": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["slug", "label", "terms"],
            "additionalProperties": false,
            "properties": {
              "slug": { "type": "string", "pattern": "^[a-z_]+$" },
              "label": { "type": "string" },
              "terms": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["slug", "label"],
                  "properties": {
                    "slug": { "type": "string" },
                    "label": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "designTokens": {
      "type": "object",
      "required": ["colors", "typography", "spacing"],
      "additionalProperties": false,
      "properties": {
        "colors": {
          "type": "object",
          "required": ["brand", "background", "surface", "text", "accent"],
          "additionalProperties": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
          "properties": {
            "brand": { "type": "string" },
            "background": { "type": "string" },
            "surface": { "type": "string" },
            "text": { "type": "string" },
            "accent": { "type": "string" }
          }
        },
        "typography": {
          "type": "object",
          "required": ["headingFont", "bodyFont"],
          "properties": {
            "headingFont": { "type": "string" },
            "bodyFont": { "type": "string" },
            "baseSize": { "type": "string" }
          }
        },
        "spacing": {
          "type": "object",
          "required": ["base"],
          "properties": {
            "base": { "type": "string" }
          }
        }
      }
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "component", "allowedOn"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^[A-Za-z]+$" },
          "component": { "type": "string" },
          "allowedOn": {
            "type": "array",
            "items": { "type": "string" }
          },
          "description": { "type": "string" }
        }
      }
    },
    "integrations": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ordering": {
          "type": "object",
          "required": ["provider", "url"],
          "properties": {
            "provider": { "type": "string" },
            "url": { "type": "string", "pattern": "^https?://" }
          }
        },
        "analytics": {
          "type": "object",
          "properties": {
            "provider": { "type": "string" },
            "measurementId": { "type": "string" }
          }
        },
        "social": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["platform", "url"],
            "properties": {
              "platform": { "type": "string" },
              "url": { "type": "string", "pattern": "^https?://" }
            }
          }
        }
      }
    }
  }
}
